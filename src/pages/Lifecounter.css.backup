/* Lifecounter Styles */
.lifecounter-app {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  position: relative;
  background: linear-gradient(135deg, #181825 0%, #1e1e2e 100%);
}

/* Screens */
.lc-screen {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Welcome Screen */
.lc-welcome {
  align-items: center;
  justify-content: center;
}

.lc-welcome-content {
  text-align: center;
  padding: 2rem;
}

.lc-logo {
  font-size: 3.5rem;
  font-weight: 800;
  margin-bottom: 1rem;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.lc-subtitle {
  color: #a0a0b0;
  font-size: 1.1rem;
  margin-bottom: 3rem;
}

/* Buttons */
.lc-btn {
  padding: 1rem 2rem;
  border: none;
  border-radius: 12px;
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  font-family: inherit;
}

.lc-btn-primary {
  background: #6366f1;
  color: white;
}

.lc-btn-primary:active {
  transform: scale(0.95);
  background: #4f46e5;
}

.lc-btn-secondary {
  background: rgba(255, 255, 255, 0.1);
  color: white;
  backdrop-filter: blur(10px);
}

.lc-btn-secondary:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.15);
}

.lc-btn-danger {
  background: #ef4444;
  color: white;
}

.lc-btn-large {
  padding: 1.5rem 3rem;
  font-size: 1.3rem;
}

.lc-btn-block {
  width: 100%;
  margin-bottom: 1rem;
}

.lc-btn-back,
.lc-btn-menu {
  background: rgba(255, 255, 255, 0.1);
  border: none;
  color: white;
  padding: 0.75rem 1.25rem;
  border-radius: 10px;
  font-size: 1rem;
  cursor: pointer;
  backdrop-filter: blur(10px);
}

/* Screen Header */
.lc-screen-header {
  display: flex;
  align-items: center;
  padding: 1.5rem;
  gap: 1rem;
  background: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(10px);
  flex-shrink: 0;
}

.lc-screen-header h2 {
  flex: 1;
  text-align: center;
  font-size: 1.5rem;
  margin: 0;
}

/* Selector de Orientación */
.lc-orientation-selector {
  display: flex;
  gap: 1rem;
  padding: 1rem 2rem;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.2);
}

.lc-orientation-label {
  color: #a0a0b0;
  font-size: 0.95rem;
  margin: 0;
}

.lc-orientation-btn {
  padding: 0.75rem 1.5rem;
  border: 2px solid rgba(255, 255, 255, 0.2);
  border-radius: 10px;
  background: rgba(255, 255, 255, 0.05);
  color: #a0a0b0;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  font-family: inherit;
}

.lc-orientation-btn.active {
  background: #6366f1;
  color: white;
  border-color: #6366f1;
}

.lc-orientation-btn:active {
  transform: scale(0.95);
}

/* Game Mode Screen */
.lc-game-modes {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  padding: 2rem;
  flex: 1;
  justify-content: center;
  overflow-y: auto;
}

.lc-mode-card {
  background: rgba(255, 255, 255, 0.05);
  border: 2px solid #2a2a3e;
  border-radius: 16px;
  padding: 2rem;
  cursor: pointer;
  transition: all 0.2s ease;
  backdrop-filter: blur(10px);
  text-align: center;
}

.lc-mode-card:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.1);
  border-color: #6366f1;
}

.lc-mode-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.lc-mode-card h3 {
  font-size: 1.8rem;
  margin-bottom: 0.5rem;
  color: white;
}

.lc-mode-card p {
  color: #a0a0b0;
  font-size: 1rem;
  margin: 0;
}

/* Setup Screen */
.lc-setup-container {
  flex: 1;
  overflow-y: auto;
  padding: 1.5rem;
  display: grid;
  gap: 1.5rem;
}

.lc-player-setup-card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16px;
  padding: 1.5rem;
  border: 2px solid #2a2a3e;
}

.lc-player-setup-card h3 {
  margin-bottom: 1rem;
  font-size: 1.3rem;
  color: white;
}

.lc-form-group {
  margin-bottom: 1rem;
}

.lc-form-group label {
  display: block;
  margin-bottom: 0.5rem;
  color: #a0a0b0;
  font-size: 0.9rem;
}

.lc-form-group input,
.lc-form-group select {
  width: 100%;
  padding: 0.75rem;
  background: rgba(255, 255, 255, 0.1);
  border: 1px solid #2a2a3e;
  border-radius: 8px;
  color: white;
  font-size: 1rem;
  font-family: inherit;
}

.lc-form-group input::placeholder {
  color: #6b7280;
}

.lc-color-picker,
.lc-mana-colors {
  display: flex;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.lc-color-option {
  width: 50px;
  height: 50px;
  border-radius: 10px;
  border: 3px solid transparent;
  cursor: pointer;
  transition: all 0.2s ease;
}

.lc-color-option.selected {
  border-color: white;
  transform: scale(1.1);
  box-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
}

.lc-mana-option {
  width: 45px;
  height: 45px;
  border-radius: 50%;
  border: 3px solid transparent;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 1.2rem;
  transition: all 0.2s ease;
}

.lc-mana-option.selected {
  border-color: white;
  transform: scale(1.1);
  box-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
}

.lc-setup-footer {
  padding: 1.5rem;
  background: rgba(0, 0, 0, 0.2);
  flex-shrink: 0;
}

/* Game Screen */
.lc-game-screen {
  height: 100vh;
}

/* Ocultar header y footer en el modo de juego */
.lc-game-screen .lc-game-header,
.lc-game-screen .lc-game-footer {
  display: none;
}

.lc-game-header {
  display: flex;
  align-items: center;
  padding: 1rem;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  gap: 1rem;
  flex-shrink: 0;
}

.lc-turn-tracker {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0.5rem 1rem;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 10px;
}

.lc-turn-label {
  font-size: 0.75rem;
  color: #a0a0b0;
}

.lc-turn-number {
  font-size: 1.5rem;
  font-weight: bold;
  color: white;
}

.lc-current-player {
  flex: 1;
  text-align: center;
  font-size: 1rem;
  color: white;
  font-weight: 600;
}

.lc-game-board {
  flex: 1;
  display: grid;
  gap: 1px;
  background: #181825;
  overflow: hidden;
  position: relative;
  height: 100vh;
}

.lc-game-board.lc-mode-1v1 {
  grid-template-columns: 1fr;
  grid-template-rows: 1fr 1fr;
}

.lc-game-board.lc-mode-2v2,
.lc-game-board.lc-mode-commander {
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
}

.lc-game-board.lc-mode-threeway {
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
  position: relative;
}

/* Para 3 jugadores: 1 arriba (ocupa 2 columnas), 2 abajo */
.lc-game-board.lc-mode-threeway .lc-player-panel:first-child {
  grid-column: 1 / -1;
}

/* Orientación LANDSCAPE - Forzada manualmente o por media query */
.lc-game-board.lc-orientation-landscape .lc-player-panel,
@media (orientation: landscape) {
  .lc-game-board:not(.lc-orientation-portrait) .lc-player-panel {
    /* En landscape, reorganizar el contenido del asiento */
    flex-direction: row;
    justify-content: space-between;
    padding: 1rem 2rem;
  }
}

.lc-game-board.lc-orientation-landscape .lc-player-panel {
  flex-direction: row;
  justify-content: space-between;
  padding: 1rem 2rem;
}

/* Estilos landscape aplicados con clase manual */
.lc-game-board.lc-orientation-landscape .lc-player-info-section,
@media (orientation: landscape) {
  .lc-game-board:not(.lc-orientation-portrait) .lc-player-info-section {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
}

.lc-game-board.lc-orientation-landscape .lc-player-info-section {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 0.5rem;
}

  /* Contador de vida más compacto en landscape */
  .lc-life-counter {
    flex-direction: row;
    gap: 1.5rem;
    flex: 1;
    justify-content: center;
    align-items: center;
  }

  .lc-life-btn {
    width: 70px;
    height: 70px;
  }

  .lc-life-value {
    font-size: 5rem;
    min-width: 150px;
  }

  /* Asegurar que - siempre esté a la izquierda y + a la derecha */
  .lc-life-counter {
    order: 2;
  }

  /* Ajustar tamaños en landscape */
  .lc-player-name {
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
  }

  .lc-player-deck {
    font-size: 0.8rem;
    margin-bottom: 0.5rem;
  }

  .lc-mana-display {
    margin-bottom: 0.5rem;
  }

  .lc-mana-symbol {
    width: 26px;
    height: 26px;
    font-size: 0.8rem;
  }

  .lc-counters-display {
    font-size: 0.85rem;
  }

  /* Fondo adaptado para landscape */
  .lc-player-panel {
    background-size: cover;
    background-position: center center;
  }

  /* Turn indicator mantiene su posición bottom-right */
  .lc-turn-indicator {
    bottom: 1rem;
    right: 1rem;
  }

  /* Para jugadores superiores en landscape */
  .lc-player-panel.top-player .lc-player-info-section {
    transform: rotate(180deg);
  }

  .lc-player-panel.top-player .lc-life-counter {
    flex-direction: row-reverse; /* Invertir orden de botones */
  }

  .lc-player-panel.top-player .lc-life-value {
    transform: rotate(180deg);
  }

  /* El fondo se mantiene sin rotar en landscape */
  .lc-player-panel.top-player {
    background-position: center center;
  }

  /* Indicador de turno para jugadores superiores en landscape */
  .lc-player-panel.top-player .lc-turn-indicator {
    /* La caja mantiene su posición bottom-right */
    bottom: 1rem;
    right: 1rem;
  }

  .lc-player-panel.top-player .lc-turn-indicator .lc-turn-info {
    transform: rotate(180deg);
  }
}

/* Portrait: Layout vertical por defecto */
@media (orientation: portrait) {
  .lc-player-panel {
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .lc-player-info-section {
    width: 100%;
    align-items: center;
  }

  .lc-life-counter {
    flex-direction: row;
  }

  /* En portrait, el orden normal de botones es correcto */
  .lc-life-btn:first-child {
    order: 1; /* botón - */
  }

  .lc-life-value {
    order: 2;
  }

  .lc-life-btn:last-child {
    order: 3; /* botón + */
  }
}

/* Player Panel */
.lc-player-panel {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 1.5rem;
  overflow: hidden;
  transition: all 0.3s ease;
  border-radius: 20px;
  margin: 4px;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

/* Overlay semiopaco para fondos personalizados */
.lc-player-panel::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: inherit;
  opacity: 0.7;
  z-index: 0;
}

.lc-player-panel::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  backdrop-filter: blur(2px);
  z-index: 0;
}

.lc-player-panel > * {
  position: relative;
  z-index: 1;
}

/* Sección de información del jugador */
.lc-player-info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
}

.lc-player-panel.active-turn {
  box-shadow: inset 0 0 30px rgba(255, 215, 0, 0.5);
}

.lc-player-panel.defeated {
  opacity: 0.5;
  filter: grayscale(100%);
}

/* Jugadores superiores en PORTRAIT - números y elementos invertidos */
@media (orientation: portrait) {
  .lc-player-panel.top-player .lc-life-value,
  .lc-player-panel.top-player .lc-life-btn {
    transform: rotate(180deg);
  }

  .lc-player-panel.top-player .lc-player-name,
  .lc-player-panel.top-player .lc-player-deck,
  .lc-player-panel.top-player .lc-mana-display,
  .lc-player-panel.top-player .lc-counters-display {
    transform: rotate(180deg);
  }

  /* Rotar solo el CONTENIDO del indicador de turno para jugadores superiores */
  .lc-player-panel.top-player .lc-turn-indicator .lc-turn-info {
    transform: rotate(180deg);
  }
}

.lc-player-name {
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
  color: white;
}

.lc-player-deck {
  font-size: 0.85rem;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 1rem;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
}

.lc-life-counter {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
}

.lc-life-btn {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 3px solid rgba(255, 255, 255, 0.3);
  background: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 2rem;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.1s ease;
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
}

.lc-life-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.2);
}

.lc-life-value {
  font-size: 4rem;
  font-weight: 800;
  min-width: 120px;
  text-align: center;
  cursor: pointer;
  text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.9);
  color: white;
  user-select: none;
}

.lc-mana-display {
  display: flex;
  gap: 0.3rem;
  margin-bottom: 1rem;
}

.lc-mana-symbol {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 0.9rem;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
}

.lc-counters-display {
  display: flex;
  gap: 1rem;
  font-size: 0.9rem;
  flex-wrap: wrap;
  justify-content: center;
}

.lc-counter-item {
  background: rgba(0, 0, 0, 0.6);
  padding: 0.3rem 0.8rem;
  border-radius: 20px;
  backdrop-filter: blur(5px);
  color: white;
}

/* Indicador de turno activo - Abajo a la derecha */
.lc-turn-indicator {
  position: absolute;
  bottom: 1rem;
  right: 1rem;
  background: rgba(255, 215, 0, 0.95);
  padding: 0.6rem 1.2rem;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(255, 215, 0, 0.5);
  animation: pulse-glow 2s ease-in-out infinite;
  z-index: 10;
  cursor: pointer;
  user-select: none;
  transition: all 0.2s ease;
}

.lc-turn-indicator:hover {
  transform: scale(1.05);
  box-shadow: 0 6px 20px rgba(255, 215, 0, 0.7);
}

.lc-turn-indicator:active {
  transform: scale(0.95);
}

.lc-turn-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.lc-turn-badge {
  font-size: 0.85rem;
  font-weight: 700;
  color: #1e1e2e;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

@keyframes pulse-glow {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 4px 15px rgba(255, 215, 0, 0.5);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 6px 25px rgba(255, 215, 0, 0.8);
  }
}

/* Botón de menú central */
.lc-btn-menu-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.7);
  border: 3px solid rgba(255, 255, 255, 0.2);
  color: white;
  font-size: 1.5rem;
  cursor: pointer;
  backdrop-filter: blur(10px);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
  transition: all 0.2s ease;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: inherit;
}

.lc-btn-menu-center:hover {
  background: rgba(0, 0, 0, 0.85);
  border-color: rgba(255, 255, 255, 0.4);
  transform: translate(-50%, -50%) scale(1.1);
}

.lc-btn-menu-center:active {
  transform: translate(-50%, -50%) scale(0.95);
}

.lc-game-footer {
  padding: 1rem;
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10px);
  flex-shrink: 0;
}

/* Modal */
.lc-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(10px);
}

.lc-modal-content {
  background: #1e1e2e;
  border-radius: 20px;
  padding: 2rem;
  max-width: 90%;
  max-height: 90%;
  overflow-y: auto;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  min-width: 300px;
}

.lc-modal-content h3 {
  margin-bottom: 1.5rem;
  font-size: 1.5rem;
  text-align: center;
  color: white;
}

.lc-menu-info {
  background: rgba(255, 255, 255, 0.05);
  padding: 1rem;
  border-radius: 10px;
  margin-bottom: 1.5rem;
  text-align: center;
}

.lc-menu-info p {
  margin: 0.5rem 0;
  color: #a0a0b0;
  font-size: 0.95rem;
}

.lc-menu-info strong {
  color: white;
  font-size: 1.1rem;
}

/* Player Config Modal */
.lc-player-config {
  max-width: 500px;
}

.lc-config-section {
  margin-bottom: 1.5rem;
}

.lc-config-section h4 {
  margin-bottom: 0.75rem;
  color: #a0a0b0;
  font-size: 1rem;
}

.lc-counter-controls {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1rem;
  background: rgba(255, 255, 255, 0.05);
  padding: 1rem;
  border-radius: 10px;
}

.lc-counter-controls label {
  flex: 1;
  color: white;
}

.lc-counter-controls .lc-life-counter {
  margin: 0;
}

.lc-counter-controls .lc-life-btn {
  width: 40px;
  height: 40px;
  font-size: 1.5rem;
}

.lc-counter-controls .lc-life-value {
  font-size: 1.5rem;
  min-width: 60px;
}

/* Result Screen */
.lc-result-screen {
  align-items: center;
  justify-content: center;
}

.lc-result-content {
  padding: 2rem;
  width: 100%;
  max-width: 800px;
}

.lc-result-content h2 {
  font-size: 2.5rem;
  margin-bottom: 2rem;
  text-align: center;
  color: white;
}

.lc-result-summary {
  margin-bottom: 2rem;
}

.lc-result-player {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12px;
  padding: 1.5rem;
  margin-bottom: 1rem;
  border: 2px solid #2a2a3e;
}

.lc-result-player.winner {
  border-color: #ffd700;
  background: rgba(255, 215, 0, 0.1);
}

.lc-result-player h3 {
  font-size: 1.3rem;
  margin-bottom: 0.5rem;
  color: white;
}

.lc-result-stats {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 0.5rem;
  color: #a0a0b0;
  font-size: 0.95rem;
}

.lc-result-stats strong {
  color: white;
}

.lc-result-actions {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
  justify-content: center;
}

/* Responsive */
@media (min-width: 768px) {
  .lc-logo {
    font-size: 5rem;
  }

  .lc-game-modes {
    flex-direction: row;
    align-items: stretch;
  }

  .lc-mode-card {
    flex: 1;
  }

  .lc-setup-container {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (orientation: landscape) and (max-height: 500px) {
  .lc-life-value {
    font-size: 3rem;
  }

  .lc-life-btn {
    width: 50px;
    height: 50px;
    font-size: 1.5rem;
  }

  .lc-player-name {
    font-size: 1rem;
  }

  .lc-player-deck {
    font-size: 0.75rem;
  }
}

/* Asignación de Asientos */
.lc-seat-assignment-modal {
  min-width: 320px;
  max-width: 700px;
}

.lc-assignment-text {
  text-align: center;
  color: #a0a0b0;
  margin-bottom: 2rem;
  font-size: 1.1rem;
  min-height: 2.5rem;
}

.lc-available-players {
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
  justify-content: center;
  margin-bottom: 2rem;
}

.lc-player-select-btn {
  background: rgba(255, 255, 255, 0.05);
  border: 3px solid rgba(255, 255, 255, 0.3);
  border-radius: 12px;
  padding: 0.75rem 1.5rem;
  cursor: pointer;
  transition: all 0.2s ease;
  color: white;
  font-family: inherit;
  font-size: 1rem;
  font-weight: 600;
}

.lc-player-select-btn:hover {
  background: rgba(255, 255, 255, 0.1);
  transform: scale(1.05);
}

.lc-player-select-btn:active {
  transform: scale(0.95);
}

.lc-seat-grid {
  display: grid;
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.lc-seat-grid.lc-mode-1v1 {
  grid-template-columns: 1fr;
  grid-template-rows: 1fr 1fr;
}

.lc-seat-grid.lc-mode-2v2,
.lc-seat-grid.lc-mode-commander {
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
}

.lc-seat-grid.lc-mode-threeway {
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
}

.lc-seat-grid.lc-mode-threeway .lc-seat-slot:first-child {
  grid-column: 1 / -1;
}

.lc-seat-slot {
  background: rgba(255, 255, 255, 0.05);
  border: 2px solid rgba(255, 255, 255, 0.2);
  border-radius: 12px;
  padding: 2rem;
  min-height: 100px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.lc-seat-slot.selectable {
  cursor: pointer;
}

.lc-seat-slot.selectable:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: #6366f1;
  transform: scale(1.02);
}

.lc-seat-slot.occupied {
  background: rgba(99, 102, 241, 0.2);
  border-color: #6366f1;
}

.lc-seat-number {
  color: #a0a0b0;
  font-size: 0.85rem;
  margin-bottom: 0.5rem;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.lc-seat-player {
  color: white;
  font-size: 1.3rem;
  font-weight: 600;
}

/* High Roll Modal */
.lc-highroll-modal {
  min-width: 320px;
  max-width: 500px;
  text-align: center;
}

.lc-highroll-text {
  text-align: center;
  color: #a0a0b0;
  margin-bottom: 2rem;
  font-size: 1.1rem;
}

.lc-dice-animation {
  margin: 2rem 0;
  display: flex;
  justify-content: center;
}

.lc-dice {
  font-size: 5rem;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* Cartel de Cambio de Ronda */
.lc-round-change-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  animation: fadeIn 0.3s ease;
}

.lc-round-change-banner {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 3rem 5rem;
  border-radius: 20px;
  box-shadow: 0 10px 50px rgba(0, 0, 0, 0.5);
  animation: bounceIn 0.5s ease;
}

.lc-round-change-banner h2 {
  font-size: 4rem;
  font-weight: 800;
  color: white;
  margin: 0;
  text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
  text-align: center;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes bounceIn {
  0% {
    transform: scale(0.3);
    opacity: 0;
  }
  50% {
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* Notificación de Victoria */
.lc-victory-notification {
  position: fixed;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1500;
  animation: slideUp 0.4s ease;
}

.lc-victory-content {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  padding: 2rem 3rem;
  border-radius: 20px;
  box-shadow: 0 10px 40px rgba(255, 215, 0, 0.6);
  text-align: center;
}

.lc-victory-content h2 {
  color: #1e1e2e;
  font-size: 2rem;
  margin: 0 0 0.5rem 0;
  font-weight: 800;
}

.lc-victory-content p {
  color: #1e1e2e;
  margin: 0 0 1.5rem 0;
  font-size: 1.1rem;
}

.lc-victory-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
}

@keyframes slideUp {
  from {
    transform: translate(-50%, 100%);
    opacity: 0;
  }
  to {
    transform: translate(-50%, 0);
    opacity: 1;
  }
}

/* Selector de fondos */
.lc-background-picker {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
  gap: 0.5rem;
  margin-top: 0.5rem;
}

.lc-background-option {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 8px;
  border: 3px solid transparent;
  cursor: pointer;
  transition: all 0.2s ease;
  background-size: cover;
  background-position: center;
  position: relative;
  overflow: hidden;
}

.lc-background-option.selected {
  border-color: white;
  transform: scale(1.05);
  box-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
}

.lc-background-option:hover {
  transform: scale(1.05);
}

/* Touch improvements */
@media (hover: none) {
  .lc-btn:hover {
    transform: none;
  }

  .lc-life-btn:hover {
    transform: none;
  }

  .lc-player-select-btn:hover {
    transform: none;
  }

  .lc-seat-slot.selectable:hover {
    transform: none;
  }

  .lc-background-option:hover {
    transform: none;
  }
}
